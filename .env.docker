# Variables de entorno para Docker Compose
# Copia este archivo a .env y configura los valores reales

# Configuración de Supabase
SUPABASE_URL=https://ixvefxnycehbvipxcngv.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Configuración de PostgreSQL (Supabase Pooler)
DATABASE_URL=postgresql://postgres.your-project:your_password@aws-region.pooler.supabase.com:5432/postgres?sslmode=require
DB_HOST=aws-region.pooler.supabase.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres.your-project
DB_PASSWORD=your_password_here

# Configuración del servidor
PORT=3001
NODE_ENV=production

# Configuración JWT
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_for_security
JWT_EXPIRES_IN=24h

# Configuración Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=defaultpassword

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_minimum_32_characters_for_security

# Configuración específica para EasyPanel
EASYPANEL_PORT=8847
EASYPANEL_DOMAIN=your-domain.com

# Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=combined

# Configuración de Puppeteer para Docker
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser